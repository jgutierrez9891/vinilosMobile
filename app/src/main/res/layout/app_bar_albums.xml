<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.VinylsAppG21.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/side_nav_bar"
            app:popupTheme="@style/Theme.VinylsAppG21.PopupOverlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardview_light_background">


            <TextView
                android:id="@+id/textAlbums"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Albumes"
                android:textColor="@color/black"
                android:background="@color/cardview_light_background"/>
            <TextView
                android:id="@+id/textAlbumsInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Encuentra tu Ã¡lbum favorito"
                android:textColor="@color/black"
                android:background="@color/cardview_light_background"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_albums" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>